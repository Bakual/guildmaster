	<description>MOD_GUILD_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_guild">mod_guild.php</filename>
		<folder>language</folder>
		<folder>tmpl</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="genstats"
					type="radio"
					label="Show generic guild information"
					layout="joomla.form.field.radio.switcher"
					default="1"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
					name="extstats"
					type="radio"
					label="Show extened guild information"
					layout="joomla.form.field.radio.switcher"
					default="1"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
					name="leaders"
					type="radio"
					label="Show leader information"
					layout="joomla.form.field.radio.switcher"
					default="1"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
					name="current"
					type="radio"
					label="Show current guild events"
					layout="joomla.form.field.radio.switcher"
					default="0"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
					name="breakdown"
					type="radio"
					label="Show guild overview"
					layout="joomla.form.field.radio.switcher"
					default="0"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
